<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sil.storyproducer">

    <!-- IMPORTANT for allowing recording and also writing to sd card -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Story List Page -->
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/title_activity_story_templates"
            android:screenOrientation="portrait" />
        <!-- Pager Base -->
        <activity
            android:name=".controller.pager.PagerBaseActivity"
            android:label="Pager Base"
            android:screenOrientation="portrait" />

        <!-- File Explorer Launch Page -->
        <activity
            android:name=".controller.export.MainExportActivity"
            android:label="Bob">
        </activity>

        <!-- File Explorer Launch Page -->
        <activity
            android:name=".controller.export.FileChooser"
            android:label="FileChooser">
        </activity>

        <!-- Info Page -->
        <activity
            android:name=".controller.InfoPageActivity"
            android:label="@string/title_activity_info_page"
            android:parentActivityName=".controller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.MainActivity" />
        </activity>
        <!-- Splash Screen -->
        <activity
            android:name=".controller.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.RegistrationActivity"></activity>
        <activity
            android:name=".controller.learn.LearnActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.export.ExportActivity"></activity>
    </application>

</manifest>
