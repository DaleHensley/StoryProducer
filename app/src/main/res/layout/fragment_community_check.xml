<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fragment_commcheck_image_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="@dimen/triangle_width"
            android:layout_height="@dimen/triangle_height"
            android:layout_alignBottom="@id/fragment_commcheck_image_view"
            android:layout_alignRight="@id/fragment_commcheck_image_view"
            android:background="@drawable/triangle_background"/>
        <TextView
            android:id="@+id/slide_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fragment_commcheck_image_view"
            android:layout_alignRight="@id/fragment_commcheck_image_view"
            android:paddingRight="7dp"
            android:text="1"
            android:textSize="@dimen/text_body"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_commcheck_Relative_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_container"
        android:background="@color/gray"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp">

        <ListView
            android:id="@+id/audio_comment_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scrollbars="vertical"
            android:layout_above="@+id/buttonLayout">
        </ListView>

        <RelativeLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fragment_commcheck_add_comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_title="Record"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fragment_draft_playback_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_title="Play"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
