<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="org.sil.storyproducer.controller.learn.LearnActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/learnImageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:onClick="onClickPlayPauseButton"
            android:src="@drawable/ic_play_gray" />

        <SeekBar
            android:id="@+id/videoSeekBar"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/playButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="false"
            android:max="100" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="70dp">

            <ImageView
                android:id="@+id/soundOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_menu_play" />

            <Switch
                android:id="@+id/volumeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/soundOn"
                android:layout_toLeftOf="@+id/soundOff"
                android:layout_toStartOf="@+id/soundOff"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/soundOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/volumeSwitch"
                android:layout_toStartOf="@+id/volumeSwitch"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_no_audio" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
